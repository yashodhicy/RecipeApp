<h1>Add a new food</h1>
<%= form_with model: @food, url: foods_path, method: :post, local: true, scope: :food do |form| %>
   <%= form.label :name %>
  <%= form.text_field :name, required: true %>

  <%= form.label :measurement_unit %>
  <%= form.select :measurement_unit, options_for_select(['grams','units','leters']), required: true %>

  <%= form.label :price %>
  <%= form.text_field :price,type: "number", step: "0.001", required: true %>

  <%= form.label :quantity %>
  <%= form.number_field :quantity, required: true, min: 1 %>

  <%= form.submit "Create food" %>
<% end %>