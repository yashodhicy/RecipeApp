<!DOCTYPE html>
<html>
  <head>
    <title>RecipeApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header>

      <div class="container">
      <% if user_signed_in? %>
      <ul>
        <li class="dropdown">
          <a class="btn dropbtn">Menu </a>
          <div class="dropdown-content">
            <%= link_to 'foods', foods_path , class: " pages-links btn-foods" %>
            <%= link_to 'your recipes', recipes_path, class: "pages-links btn-recipes"%>
            <%= link_to 'public recipes', public_recipes_path, class: "pages-links btn-recipes"%>
          </div>
        </li>
      </ul>
      <% end %>  
      <div class="sign-in">
          <% if user_signed_in? %>
            <div class="text-end">
              <%= link_to 'Logout', destroy_user_session_path, class: "btn btn-logout", data: { turbo_method: :delete } %>
            </div>
          <% else %>
            <div class="sign-up">
              <%= link_to 'Login', new_user_session_path, class: "btn btn-login" %>
              <%= link_to 'Sign-up', new_user_registration_path, class: "btn btn-sign-up" %>
            </div>
          <% end %>
        </div>
      </div>
    </header>
    <main>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <%= yield %>
    </main>
  </body>
</html>
